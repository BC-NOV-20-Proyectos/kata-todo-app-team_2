<div class="text-field mb-3">
  <%= form.label :email, :class => "fw-bold mb-2" %>
  <%= form.text_field :email, :placeholder => "Type your email here...", :class => "w-100 input-custom bg-gray px-4 form-control rounded-buttons", type: 'email' %>
</div>

<div class="password-field">
  <%= form.label :password, :class => "fw-bold mb-2" %>
  <%= form.password_field :password, :placeholder => "Type your password here...", :class => "w-100 input-custom bg-gray px-4 form-control rounded-buttons" %>
</div>
